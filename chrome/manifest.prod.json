{
    "version": "1.6.8",
    "name": "Sourcegraph for GitHub",
    "manifest_version": 2,
    "description": "Gives GitHub IDE powers: jump to definition and hover tooltips in code, PRs, and diffs",
    "browser_action": {
        "default_title": "Sourcegraph",
        "default_popup": "options.html",
        "default_icon": {
            "16": "img/icon-16.png",
            "48": "img/icon-48.png",
            "128": "img/icon-128.png"
        }
    },
    "applications": {
        "gecko": {
            "id": "firefox-extension@sourcegraph.com"
        }
    },
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*", "https://sourcegraph.com/*"],
            "run_at": "document_end",
            "js": ["js/inject.bundle.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.bundle.js", "js/link.bundle.js"]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": ["cookies", "activeTab", "storage", "https://github.com/*", "https://sourcegraph.com/*"],
    "optional_permissions": ["tabs", "http://*/", "https://*/"],
    "web_accessible_resources": ["img/*", "js/link.bundle.js", "link.html", "css/style.bundle.css"]
}
