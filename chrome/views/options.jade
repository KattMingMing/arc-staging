doctype html

html
  head
    title Sourcegraph extension
  body
    h3 Advanced options
    p Warning: changing these options may break your Chrome extension.
    form#sourcegraph_url_form
      label Sourcegraph URL:
      input#sourcegraph_url
      input(type="submit", value="Save")
    div(id="sourcegraph-enable-search-container")
      div
        label Enable search:
        input(type="checkbox", id="sourcegraph-enable-search")
      div
        label Use Sourcegraph as default search:
        input(type="checkbox", id="sourcegraph-default-search")
    script(src='/js/options.bundle.js')
